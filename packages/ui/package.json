{
  "name": "@unicorn-ui/ui",
  "version": "0.1.0",
  "description": "2026-native component library with zero UI dependencies",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/global.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/global.css -o ./dist/global.css",
    "dev": "concurrently \"tsup --watch\" \"npm run build:css -- --watch\"",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["react", "components", "ui", "native", "popover", "dialog", "2026"],
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cobe": "^0.6.5",
    "dotted-map": "^2.2.3",
    "next-themes": "^0.4.6",
    "react-icon-cloud": "^4.1.7",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "framer-motion": "^12.0.0",
    "lucide-react": "^0.469.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
